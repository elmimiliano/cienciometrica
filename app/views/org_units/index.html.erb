<p id="notice"><%= notice %></p>

<h1>Org Units</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>Post code</th>
      <th>Street</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @org_units.each do |org_unit| %>
      <tr>
        <td><%= org_unit.name %></td>
        <td><%= org_unit.city %></td>
        <td><%= org_unit.post_code %></td>
        <td><%= org_unit.street %></td>
        <td><%= org_unit.country %></td>
        <td><%= link_to 'Show', org_unit %></td>
        <td><%= link_to 'Edit', edit_org_unit_path(org_unit) %></td>
        <td><%= link_to 'Destroy', org_unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Org Unit', new_org_unit_path %>
